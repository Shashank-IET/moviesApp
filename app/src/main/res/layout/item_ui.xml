<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        android:id="@+id/iv_bg"/>

    <TextView
        android:layout_width="0dp"
        app:layout_constraintRight_toLeftOf="@id/tv_rating"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_height="wrap_content"
        android:id="@+id/tv_title"
        android:padding="8dp"
        android:textColor="#fff"
        android:textStyle="bold"
        tools:text="GodFather 1"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        android:background="#88aeaeae"/>

    <TextView
        android:layout_width="50dp"
        android:layout_height="wrap_content"
        android:id="@+id/tv_rating"
        android:padding="8dp"
        android:textColor="#fff"
        app:layout_constraintRight_toRightOf="parent"
        android:textStyle="bold"
        tools:text="7.2"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="@id/iv_bg"
        android:background="#aaaeaeae"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_title"
        android:padding="8dp"
        tools:text="As a collection of history's worst tyrants and criminal masterminds gather to plot a war to wipe out millions, one man must race against time to stop them."
        android:id="@+id/tv_desc"/>

    <TextView
        android:layout_width="match_parent"
        android:gravity="end"
        android:padding="4dp"
        android:textStyle="bold"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_desc"
        android:id="@+id/tv_add_to_playlist"
        app:layout_constraintRight_toRightOf="parent"
        android:text="@string/add_to_playlist"
        />

</androidx.constraintlayout.widget.ConstraintLayout>